            <% for(let i=0;i< tasks.length ;i++) {%>
                <div id="cardtask">
                <p><%= tasks[i].task %> </p>
                <p><%= tasks[i].dueDate.toLocaleDateString() %> </p>
                <p> <%= tasks[i].category %></p>
                <p><a href="./manipulatelist/delete/<%= tasks[i]._id %>"><i class="fa-solid fa-trash"></i></a></p>
                </div>
            <% } %>
    
        </div>
    </body>
</html>