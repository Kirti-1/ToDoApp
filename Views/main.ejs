<html>
    <head>
        <title> <%= title %> </title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="CSS/style.css">
        <script src="https://kit.fontawesome.com/7d12543c94.js" crossorigin="anonymous"></script>

    </head>
    <body>
        <h1>TO DO App</h1>
        <div id="textmainbody">

            <form method="POST">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="task">Task</label>
                        <input type="text" name="task" id="task" class="form-control" placeholder="Your To Do..">
                      </div>
                  <div class="form-group col-md-6">
                    <label for="dueDate">Due Date</label>
                    <input type="date" class="form-control" placeholder="Date.." name="dueDate" id="dueDate">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="category">Category</label>
                    <select style="height:58px;" name="category" id="category" class="form-control">
                        <option value="Medium Priority">Medium Priority</option>
                        <option value="Low Priority">Low Priority</option>
                        <option value="High Priority">High Priority</option>
                    </select>
                  </div>
                </div>
                
                <button style="margin-left: 20vw;" type="submit" class="btn btn-primary" formaction="./manipulatelist/add">Add Task</button>
              </form>



